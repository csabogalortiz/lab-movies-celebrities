<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2>New Movie</h2>

            <form action="/movies/create" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>

                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot">
                </div>

                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre">
                </div>
                {{!-- Futura yo: los id y los name y todo debe estar muy bien escrito- copiar y pegar --}}


                <div class="mb-3">
                    <label for="cast" class="form-label">Cast Members</label>
                    <select multiple="true" id='cast' class="form-control" name="cast">
                        {{#each celebrities}}
                        <option value={{_id}}> {{name}} </option>
                        {{/each}}
                    </select>
                </div>
                <div class=" d-grid">
                    <button type="submit" class="btn btn-dark">Add Movie</button>
                </div>
            </form>
        </div>
    </div>